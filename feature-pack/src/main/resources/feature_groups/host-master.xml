<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="host-master" xmlns="urn:wildfly:pm-feature-group:1.0">
    <origin name="servlet">
        <feature-group name="host-master"/>
    </origin>

    <feature spec="host">
        <param name="host" value="master"/>
        <feature spec="jvm">
            <feature spec="jvm-option">
                <param name="jvm-option" value="&quot;--add-exports=java.base/sun.nio.ch=ALL-UNNAMED&quot;"/>
            </feature>
        </feature>
    </feature>
</feature-group-spec>
